{
  "name": "ihire-client",
  "description": "iHire Client Application",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ng": "ng",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "stylelint": "stylelint \"**/*.scss\"",
    "stylelint:fix": "stylelint \"**/*.scss\" --fix",
    "start": "ng serve",
    "start:host": "ng serve ihire-host",
    "start:dashboard": "ng serve ihire-dashboard",
    "start:requisition": "ng serve ihire-requisition",
    "start:interview": "ng serve ihire-interview",
    "start:talent": "ng serve ihire-talent",
    "start:audit": "ng serve ihire-audit",
    "start:report": "ng serve ihire-report",
    "start:onboarding": "ng serve ihire-onboarding",
    "start:assessment": "ng serve ihire-assessment",
    "start:user": "ng serve ihire-user",
    "start:all": "concurrently \"npm run start:host\" \"npm run start:dashboard\" \"npm run start:requisition\" \"npm run start:interview\" \"npm run start:talent\" \"npm run start:audit\" \"npm run start:report\" \"npm run start:onboarding\" \"npm run start:assessment\" \"npm run start:user\"",
    "build": "ng build",
    "test": "ng test"
  },
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@softarc/native-federation-node": "^3.3.4",
    "es-module-shims": "^1.5.12",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-architects/native-federation": "^21.0.3",
    "@angular-devkit/build-angular": "^21.0.4",
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@eslint/js": "^9.39.2",
    "angular-eslint": "21.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.47.0",
    "vitest": "^4.0.8"
  }
